<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_chargefrag_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_myfragment_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_myfragment_cdcs"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:alpha="0.7"
            android:background="@color/black"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iv_myfragment_img"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_image_load" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_myfragment_bjcdz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="编辑"
        android:textColor="@color/aff6525"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/tv_myfragment_bjcdz"
        android:layout_toRightOf="@id/rl_myfragment_img"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_myfragment_ggorgr"
                android:layout_width="30dip"
                android:layout_height="15dip"
                android:visibility="gone"
                android:layout_marginRight="5dip"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_gg" />

            <TextView
                android:id="@+id/tv_myfragment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_myfragment_cdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充电费："
            android:textColor="@color/a666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_myfragment_fwf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务费："
            android:textColor="@color/a666666"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>