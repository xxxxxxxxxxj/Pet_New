<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dip"
    android:paddingRight="15dip">

    <ImageView
        android:id="@+id/iv_item_usenotices"
        android:layout_width="26dip"
        android:layout_height="26dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_lingdang" />

    <TextView
        android:id="@+id/tv_item_usenotices_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textColor="@color/a999999"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_item_usenotices_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/tv_item_usenotices_time"
        android:layout_toRightOf="@id/iv_item_usenotices"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/a333333"
        android:textSize="14sp" />

</RelativeLayout>