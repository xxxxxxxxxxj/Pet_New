<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_mycoupon_root"
    android:layout_width="match_parent"
    android:layout_height="90dip"
    android:background="@color/red"
    android:padding="15dip">

    <TextView
        android:id="@+id/tv_item_mycoupon_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="使用时间："
        android:textColor="@color/white"
        android:textSize="11sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_item_mycoupon_time">

        <LinearLayout
            android:id="@+id/ll_item_mycoupon_jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_mycoupon_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_item_mycoupon_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/ll_item_mycoupon_jine"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_mycoupon_type"
                android:layout_width="20dip"
                android:layout_height="16dip"
                android:layout_marginRight="5dip"
                android:scaleType="fitXY"
                android:src="@mipmap/about_logo" />

            <TextView
                android:id="@+id/tv_item_mycoupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>