<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_titlebar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:src="@mipmap/more" />
        </LinearLayout>

        <ImageView
            android:layout_width="144dip"
            android:layout_height="60dip"
            android:layout_marginLeft="30dip"
            android:layout_marginBottom="40dip"
            android:layout_marginTop="20dip" />

        <EditText
            android:id="@+id/et_login_phone"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="13"
            android:paddingLeft="15dip"
            android:textColor="@color/white"
            android:textColorHint="@color/af2f2f2"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="@color/acccccc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip">

            <TextView
                android:id="@+id/tv_login_hqyzm"
                android:layout_width="85dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/bg_sms_yes"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_login_yzm"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/tv_login_hqyzm"
                android:background="@android:color/transparent"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="15dip"
                android:textColor="@color/white"
                android:textColorHint="@color/af2f2f2"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="@color/acccccc" />

        <ImageView
            android:id="@+id/iv_login_login"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="45dip"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_login_no" />

    </LinearLayout>
</RelativeLayout>
