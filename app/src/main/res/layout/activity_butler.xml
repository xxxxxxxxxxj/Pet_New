<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl_butler"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/white"
        tl:tl_divider_color="@color/aEEEEEE"
        tl:tl_divider_padding="13dp"
        tl:tl_divider_width="2dip"
        tl:tl_indicator_color="@color/a0271F0"
        tl:tl_indicator_height="2dip"
        tl:tl_indicator_width="20dip"
        tl:tl_tab_padding="22dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textBold="BOTH"
        tl:tl_textSelectColor="@color/a0271F0"
        tl:tl_textUnselectColor="@color/a333333"
        tl:tl_textsize="15sp"
        tl:tl_underline_color="#1A000000"
        tl:tl_underline_height="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_butler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
