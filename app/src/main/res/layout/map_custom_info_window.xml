<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/ll_map_custom_info"
        android:layout_width="59dip"
        android:layout_height="66.5dip"
        android:layout_marginTop="3dip"
        android:background="@mipmap/custom_info_bubble"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_map_custom_info"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_image_load" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_map_custom_info"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_marginLeft="48dip"
        android:background="@mipmap/custom_info_bubble_num"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>