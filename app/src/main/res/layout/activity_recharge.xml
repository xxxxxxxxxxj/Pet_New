<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:background="@color/af8f8f8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingTop="15dip"
                android:text="请选择充值金额"
                android:textColor="@color/a333333"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_recharge_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:background="@color/af8f8f8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dip"
                android:text="请选择支付方式"
                android:textColor="@color/a666666"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_recharge_wx"
                android:layout_width="match_parent"
                android:layout_height="54dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <ImageView
                    android:id="@+id/iv_recharge_wx"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_addcharge_unselect" />

                <ImageView
                    android:id="@+id/iv_recharge_wxicon"
                    android:layout_width="26dip"
                    android:layout_height="23dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_recharge_wxicon"
                    android:text="微信支付"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="15dip"
                android:background="@color/aEEEEEE" />

            <RelativeLayout
                android:id="@+id/rl_recharge_zfb"
                android:layout_width="match_parent"
                android:layout_height="54dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <ImageView
                    android:id="@+id/iv_recharge_zfb"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_addcharge_unselect" />

                <ImageView
                    android:id="@+id/iv_recharge_zfbicon"
                    android:layout_width="23.5dip"
                    android:layout_height="23.5dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_zfb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_recharge_zfbicon"
                    android:text="支付宝支付"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="15dip"
                android:background="@color/aEEEEEE" />

            <Button
                android:id="@+id/btn_recharge_ljcz"
                android:layout_width="match_parent"
                android:layout_height="49dip"
                android:layout_marginBottom="44dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="130dip"
                android:background="@mipmap/bg_btn"
                android:text="立即充值"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
