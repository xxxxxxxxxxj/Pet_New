<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_collectcharge_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="15dip">

    <ImageView
        android:id="@+id/iv_item_collectcharge_img"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginRight="10dip"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_image_load" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_collectcharge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:text="TextView"
            android:textColor="@color/a333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_collectcharge_cdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="充电费："
            android:textColor="@color/a666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_collectcharge_fwf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="服务费："
            android:textColor="@color/a666666"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>