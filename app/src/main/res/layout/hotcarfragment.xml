<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_white">

    <ImageView
        android:id="@+id/iv_hotcarfrag_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dip"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_image_load" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dip">

        <LinearLayout
            android:id="@+id/ll_hotcarfrag_ck"
            android:layout_width="match_parent"
            android:layout_height="39dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_round_black5"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_hotcarfrag_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:layout_marginRight="5dip"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="18dip"
                android:layout_height="10dip"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_jiantou" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_hotcarfrag_ck"
            android:layout_marginBottom="15dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hotcarfrag_carname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_hotcarfrag_cardesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/a999999"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>