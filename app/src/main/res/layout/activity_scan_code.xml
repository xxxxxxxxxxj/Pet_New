<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_scan_code_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_titlebar_back"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_back" />

        <LinearLayout
            android:id="@+id/ll_scan_code_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_scan_code_btn1"
                android:layout_width="120dip"
                android:layout_height="44dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/bg_round_white25"
                android:gravity="center"
                android:text="开灯"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_scan_code_btn2"
                android:layout_width="120dip"
                android:layout_height="44dip"
                android:background="@mipmap/bg_round_jianbian"
                android:gravity="center"
                android:text="输入电桩号"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_scan_code_btn"
            android:layout_below="@id/iv_titlebar_back"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="15dip"
            android:paddingTop="50dip">

            <TextView
                android:id="@+id/tv_scan_code_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dip"
                android:text="请将二维码放入框内，即可自动扫描"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_scan_code_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="目前支持全国16万根充电桩"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_my_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>
