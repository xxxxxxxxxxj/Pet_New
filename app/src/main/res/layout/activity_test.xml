<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haotang.easyshare.mvp.view.activity.TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_test_webview"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:text="webview" />

        <Button
            android:id="@+id/btn_test_share"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:text="share" />

        <Button
            android:id="@+id/btn_test_wxlogin"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:text="微信登录" />

        <Button
            android:id="@+id/btn_test_wxpay"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:text="微信支付" />

        <Button
            android:id="@+id/btn_test_alipay"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:text="支付宝支付" />

        <Button
            android:id="@+id/btn_test_gaodemap"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:text="高德地图" />

        <Button
            android:id="@+id/btn_test_qrcode"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:text="扫描二维码" />

        <Button
            android:id="@+id/btn_test_takephoto"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:text="图片选择" />

        <Button
            android:id="@+id/btn_test_adapter"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:text="BaseRecyclerViewAdapterHelper" />

        <Button
            android:id="@+id/btn_test_banner"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:text="banner" />

    </LinearLayout>

</ScrollView>
