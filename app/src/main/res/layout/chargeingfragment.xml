<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_chargeing_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dip">

        <TextView
            android:id="@+id/tv_chargeing_titlebar_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:text="客服电话"
            android:textColor="@color/a666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_chargeing_titlebar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="充电"
            android:textColor="@color/a333333"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/vw_chargeing_titlebar"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/rl_chargeing_titlebar"
        android:background="@color/aEEEEEE" />

    <TextView
        android:id="@+id/tv_chargeing_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vw_chargeing_titlebar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="30dip"
        android:text="扫描充电桩上的二维码即可启动充电"
        android:textColor="@color/a333333"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_chargeing_desc"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目前支持："
            android:textColor="@color/a333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_chargeing_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全国16万根充电桩"
            android:textColor="@color/a0271F0"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_chargeing"
        android:layout_width="178.5dip"
        android:layout_height="178.5dip"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_image_load" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dip"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_chargeing_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dip"
            android:text="当前可用：0.0元"
            android:textColor="@color/a333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_chargeing_ljcz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即充值"
            android:textColor="@color/a0271F0"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>