<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_mycoupon_root"
    android:layout_width="match_parent"
    android:layout_height="103dip"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:background="@mipmap/bg_coupon_money"
    android:orientation="vertical"
    android:padding="15dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_item_mycoupon_jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_mycoupon_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_item_mycoupon_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/ll_item_mycoupon_jine"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_mycoupon_type"
                android:layout_width="20dip"
                android:layout_height="16dip"
                android:layout_marginRight="5dip"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_coupon_money" />

            <TextView
                android:id="@+id/tv_item_mycoupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_item_mycoupon_select"
            android:layout_width="21dip"
            android:layout_height="21dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_coupon_unselect" />

        <TextView
            android:id="@+id/tv_item_mycoupon_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_item_mycoupon_guoqi"
            android:text="使用时间："
            android:layout_marginRight="10dip"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </RelativeLayout>
</LinearLayout>