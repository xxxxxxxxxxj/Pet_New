<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="267.5dip"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_myfrag_top" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="70dip"
                android:background="@color/transparent">

                <ImageView
                    android:id="@+id/iv_myfragment_userimg"
                    android:layout_width="96dip"
                    android:layout_height="96dip"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_image_load_circle" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48dip"
                    android:background="@color/transparent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.8"
                        android:background="@color/white">

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="62.5dip"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_myfragment_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="立即登录"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/iv_myfragment_bjusername"
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:layout_marginLeft="10dip"
                                android:scaleType="fitXY"
                                android:src="@mipmap/bianjiname"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dip"
                            android:text="欢迎加入易享智行，连接电驱未来"
                            android:textColor="@color/a666666"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/ll_myfragment_yue"
                            android:layout_width="match_parent"
                            android:layout_height="84dip"
                            android:layout_marginBottom="15dip"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="账户余额"
                                    android:textColor="@color/a666666"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_myfragment_yue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dip"
                                android:layout_height="15dip"
                                android:background="@color/aDDDDDD" />

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="易享币"
                                    android:textColor="@color/a666666"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_myfragment_vipjf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dip"
                                android:layout_height="15dip"
                                android:background="@color/aDDDDDD" />

                            <LinearLayout
                                android:id="@+id/ll_myfragment_coupon"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="优惠券"
                                    android:textColor="@color/a666666"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_myfragment_yhq"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="84dip"
                            android:layout_marginBottom="15dip"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_myfragment_cdjl"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="35dip"
                                    android:layout_height="35dip"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/icon_myfrag_cdjl" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="充电记录"
                                    android:textColor="@color/a666666"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_myfragment_clxx"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="35dip"
                                    android:layout_height="35dip"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/icon_myfrag_clxx" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="车辆信息"
                                    android:id="@+id/tv_myfragment_clxx"
                                    android:textColor="@color/a666666"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_myfragment_sczd"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="35dip"
                                    android:layout_height="35dip"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/icon_myfrag_sczd" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="收藏站点"
                                    android:textColor="@color/a666666"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_myfragment_wdtz"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="35dip"
                                    android:layout_height="35dip"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/icon_myfrag_wdtz" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的帖子"
                                    android:textColor="@color/a666666"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dip"
                            android:layout_marginBottom="15dip"
                            android:background="@color/white"
                            android:padding="15dip">

                            <RelativeLayout
                                android:id="@+id/ll_myfragment_addstation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="85dip"
                                    android:layout_height="23dip"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/bg_round_ff6525"
                                    android:gravity="center"
                                    android:text="赠送5个易享币"
                                    android:textColor="@color/white"
                                    android:textSize="10sp" />

                                <ImageView
                                    android:id="@+id/iv_myfragment_addstation"
                                    android:layout_width="54dip"
                                    android:layout_height="54dip"
                                    android:layout_alignParentRight="true"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/icon_addstation" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="54dip"
                                    android:layout_toLeftOf="@id/iv_myfragment_addstation"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dip"
                                        android:text="添加充电桩"
                                        android:textColor="@color/a333333"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="加入私人充电运营，共享充电设施"
                                        android:textColor="@color/a999999"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/ll_myfragment_mycdz"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dip">

                                    <RelativeLayout
                                        android:id="@+id/rl_myfragment_mycharge_right"
                                        android:layout_width="50dip"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true">

                                        <ImageView
                                            android:layout_width="7dip"
                                            android:layout_height="11dip"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:scaleType="fitXY"
                                            android:src="@mipmap/right_more" />
                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/tv_myfragment_mycharge_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:text="我的充电桩"
                                        android:textColor="@color/a333333"
                                        android:textSize="20sp" />
                                </RelativeLayout>

                                <android.support.v4.view.ViewPager
                                    android:id="@+id/vp_myfragment_mycdz"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingLeft="15dip"
                            android:paddingRight="15dip">

                            <RelativeLayout
                                android:id="@+id/rl_myfragment_hytq"
                                android:layout_width="match_parent"
                                android:layout_height="44dip">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="会员特权"
                                    android:textColor="@color/a666666"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="7dip"
                                    android:layout_height="11dip"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/right_more" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dip"
                                android:background="@color/aEEEEEE" />

                            <RelativeLayout
                                android:id="@+id/rl_myfragment_srgj"
                                android:layout_width="match_parent"
                                android:layout_height="44dip">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="私人管家"
                                    android:textColor="@color/a666666"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="7dip"
                                    android:layout_height="11dip"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/right_more" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dip"
                                android:background="@color/aEEEEEE" />

                            <RelativeLayout
                                android:id="@+id/rl_myfragment_jjdh"
                                android:layout_width="match_parent"
                                android:layout_height="44dip">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="急救电话"
                                    android:textColor="@color/a666666"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_myfragment_jjdh"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="400-888-888"
                                    android:textColor="@color/a666666"
                                    android:textSize="14sp" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dip"
                                android:background="@color/aEEEEEE" />

                            <RelativeLayout
                                android:id="@+id/rl_myfragment_gy"
                                android:layout_width="match_parent"
                                android:layout_height="44dip">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="关于"
                                    android:textColor="@color/a666666"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="7dip"
                                    android:layout_height="11dip"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/right_more" />
                            </RelativeLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_myfragment_tuichu"
                            android:layout_width="match_parent"
                            android:layout_height="44dip"
                            android:layout_marginBottom="50dip"
                            android:layout_marginLeft="20dip"
                            android:layout_marginRight="20dip"
                            android:layout_marginTop="30dip"
                            android:background="@mipmap/bg_sms_no"
                            android:gravity="center"
                            android:text="退出"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>