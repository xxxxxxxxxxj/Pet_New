<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_rechargerecord_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="¥"
                android:textColor="@color/a333333"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_item_rechargerecord_price"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_rechargerecord_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_item_rechargerecord_cdl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="充电量："
                    android:textColor="@color/a666666"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            android:background="@color/aEEEEEE" />

        <TextView
            android:id="@+id/tv_item_rechargerecord_kssj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:text="开始时间："
            android:textColor="@color/a666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_rechargerecord_jssj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:text="结束时间："
            android:textColor="@color/a666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_rechargerecord_cdsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:text="充电时间："
            android:textColor="@color/a666666"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>