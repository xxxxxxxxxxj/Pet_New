<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/af8f8f8"
    android:orientation="vertical">

    <com.flyco.roundview.RoundRelativeLayout
        android:id="@+id/rll_item_hotpoint"
        android:layout_width="match_parent"
        android:layout_height="85dip"
        android:paddingRight="15dip"
        android:paddingLeft="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        rv:rv_backgroundColor="@color/white"
        rv:rv_cornerRadius="5dip">

        <ImageView
            android:id="@+id/iv_item_hotpoint_img"
            android:layout_width="105dip"
            android:layout_height="65dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_image_load" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/iv_item_hotpoint_img">

            <RelativeLayout
                android:id="@+id/rl_item_hotpoint1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:id="@+id/ll_item_hotpoint1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_hotpoint_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/a999999"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="14dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:background="@color/aEEEEEE" />

                    <TextView
                        android:id="@+id/tv_item_hotpoint_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/a999999"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/ll_item_hotpoint1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_item_hotpoint_userimg"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_marginRight="5dip"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_image_load_circle" />

                    <TextView
                        android:id="@+id/tv_item_hotpoint_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/a999999"
                        android:textSize="10sp" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_hotpoint_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/rl_item_hotpoint1"
                android:layout_marginBottom="5dip"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="TextView"
                android:textColor="@color/a333333"
                android:textSize="15sp" />
        </RelativeLayout>
    </com.flyco.roundview.RoundRelativeLayout>
</LinearLayout>