<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f8f8ff8">

    <include
        android:id="@+id/ll_car_detail_title"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/rl_car_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingLeft="15dip"
        android:paddingRight="15dip">

        <TextView
            android:id="@+id/tv_car_detail_submit"
            android:layout_width="115dip"
            android:layout_height="39dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_round_black5"
            android:gravity="center"
            android:text="确认报名"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/tv_car_detail_submit"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_car_detail_tgj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:text="TextView"
                android:textColor="@color/a333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_car_detail_4sprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:text="TextView"
                android:textColor="@color/a999999"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_car_detail_bottom"
        android:layout_below="@id/ll_car_detail_title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="111.5dip"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dip"
                    android:background="#EEF3F7">

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip">

                    <TextView
                        android:id="@+id/tv_car_detail_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textStyle="bold"
                        android:textColor="@color/a333333"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/tv_car_detail_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textStyle="bold"
                        android:textColor="@color/a333333"
                        android:textSize="25sp" />
                </LinearLayout>
            </RelativeLayout>

            <com.youth.banner.Banner
                android:id="@+id/banner_car_detail"
                android:layout_width="match_parent"
                android:layout_height="192dip"
                app:indicator_drawable_selected="@drawable/selected_radius" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="111.5dip"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="60dip"
                android:background="#EEF3F7"
                android:paddingLeft="30dip"
                android:paddingRight="15dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:text="最大续航里程(km)"
                        android:textColor="@color/a999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_car_detail_xh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/a333333"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:text="车型名称"
                        android:textColor="@color/a999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_car_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/a333333"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_car_detail_clxq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="111.5dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="60dip"
                android:paddingRight="15dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:text="车辆标签"
                    android:textColor="@color/aff6525"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_car_detail_clbq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/a999999"
                    android:textSize="10sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_car_detail_cxcs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="111.5dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="60dip"
                android:paddingRight="15dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:text="车辆颜色"
                    android:textColor="@color/aff6525"
                    android:textSize="15sp" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfl_car_detail_clys"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
